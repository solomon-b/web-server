cabal-version:      3.0
name:               web-server
version:            0.1.0.0
license:            Apache-2.0
license-file:       LICENSE
author:             Solomon Bothwell
maintainer:         ssbothwell@gmail.com
build-type:         Simple

--------------------------------------------------------------------------------

common common-extensions
  default-extensions:
      DataKinds
      DerivingStrategies
      DeriveAnyClass
      DerivingVia
      DeriveGeneric
      FlexibleContexts
      FlexibleInstances
      GADTs
      GeneralizedNewtypeDeriving
      ImportQualifiedPost
      InstanceSigs
      LambdaCase
      MultiParamTypeClasses
      NamedFieldPuns
      OverloadedStrings
      RankNTypes
      RecordWildCards
      TypeApplications
      TypeOperators
      TypeSynonymInstances

--------------------------------------------------------------------------------

executable web-server
  import:           common-extensions
  main-is:          Main.hs
  build-depends:    base ^>=4.18.1.0
                  , web-server
  hs-source-dirs:   app
  default-language: Haskell2010
  ghc-options:    -Wall -threaded -rtsopts -with-rtsopts=-N

--------------------------------------------------------------------------------

library
  import: common-extensions
  build-depends:  , aeson
                  , barbies
                  , base ^>=4.18.1.0
                  , base64
                  , binary
                  , bytestring
                  , case-insensitive
                  , cookie
                  , clock
                  , containers
                  , data-has
                  , deriving-aeson
                  , exceptions
                  , email-validate
                  , errors
                  , hasql
                  , hasql-pool
                  , hasql-interpolate
                  , hasql-transaction
                  , hs-opentelemetry-api
                  , hs-opentelemetry-exporter-handle
                  , hs-opentelemetry-instrumentation-wai
                  , hs-opentelemetry-sdk
                  , hs-opentelemetry-utils-exceptions
                  , htmx
                  , http-api-data
                  , http-media
                  , http-types
                  , iproute
                  , lens
                  , log-base
                  , mtl
		  , mime-mail
                  , network
                  , network-ip
                  , password
                  , servant-server
		  , smtp-mail
                  , string-interpolate
                  , text
                  , text-display
                  , time
                  , transformers
                  , uuid
                  , unix
                  , unliftio-core
                  , unordered-containers
                  , wai
                  , warp
                  , xmlhtml
  exposed-modules:
    App
    App.Auth
    App.Auth.Network
    App.Config
    App.Config.Fetchers
    App.Context
    App.Monad
    API
    API.About.Get
    API.Admin.Get
    API.MailingList.Post
