    Text.XmlHtml.Optics
    Utils
    Utils.HTML

  hs-source-dirs: src
  default-language: Haskell2010
  ghc-options:    -Wall -threaded

--------------------------------------------------------------------------------

test-suite tests
  import: common-extensions
  type:
    exitcode-stdio-1.0
  main-is:
    Spec.hs
  other-modules:
     API.User.DeleteSpec
     API.User.GetSpec
     API.User.Id.GetSpec
     Effects.Database.Tables.UserSpec
     Effects.Database.Tables.MailingListSpec
     Effects.Database.Tables.ServerSessionsSpec
     Test.Database.Expectation
     Test.Gen.DisplayName
     Test.Gen.EmailAddress
     Test.Gen.Network
     Test.Gen.Password
     Test.Gen.Time
     Test.Database.Monad
     Test.Database.Property
     Test.Database.Property.Assert
     Test.Database.Setup
  hs-source-dirs:
    test
  ghc-options:
    -Wall -threaded -rtsopts -with-rtsopts=-N -O0
